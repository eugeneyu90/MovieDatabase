<!-- views/movie.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= movie.title + ' (' + movie.release_date + ') - Popcorn DataBase' %></title>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <%- include ./partials/header %>
    </header>
    <main class="container ">
      <section class="row">
        <%- include ./partials/searchForm %>
      </section>
      <section class="row backdrop-img" style="background-image: url('<%= 'http://image.tmdb.org/t/p/original' + movie.backdrop_path%>');">
      </section>
      <div class="row"> 
        <div class="col s2 m3 l4">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src=<%= 'http://image.tmdb.org/t/p/original'+ movie.poster_path %>>
            </div>
          </div>
        </div>
        <div class="col s10 m9 l8">
          <div class="movie-info">
            <h3><%= movie.title %></h3>
            <img class="tmdb-logo" src="../img/tmdb-logo.svg"></img>
            <span><%= `${movie.vote_average}/10` %></span>
            <p><%= `Release Date: ${movie.release_date}` %></p>
            <p>Plot:</p>
            <p><%= `${movie.overview}` %></p>
          </div>
        </div>
      </div>
    </main>
    <section class="row">
      <div class="col s12">
      </div>
    </section>
    <%- include ./partials/footer %>
  </body>
</html>